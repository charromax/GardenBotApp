<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GardenBotApp" parent="Base.Theme.MaterialThemeBuilder">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gardenbot_green</item>
        <item name="colorPrimaryVariant">@color/gardenbot_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gardenbot_green_light</item>
        <item name="colorSecondaryVariant">@color/gardenbot_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/darker_gray</item>
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorError">@color/red</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/gardenbot_green_light</item>
        <item name="colorOnError">@color/white</item>
        <!--Material type attributes-->
    </style>
</resources>