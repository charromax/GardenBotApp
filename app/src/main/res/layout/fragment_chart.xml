<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_off_white_gray_strole"
    android:padding="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/charts_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_off_white_gray_strole"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/charts_content"
            app:layout_constraintStart_toStartOf="@id/charts_content"
            app:layout_constraintTop_toTopOf="@id/charts_content" />

        <TextView
            android:id="@+id/airHumLabel"
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/air_hum_chart_label"
            app:layout_constraintBottom_toTopOf="@+id/airHumLiveView"
            app:layout_constraintEnd_toEndOf="@+id/airHumLiveView"
            app:layout_constraintStart_toStartOf="@+id/airHumLiveView"
            app:layout_constraintTop_toBottomOf="@+id/pager" />

        <com.example.gardenbotapp.ui.widgets.CustomPercentageChartView
            android:id="@+id/airHumLiveView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/airTempLiveView"
            app:layout_constraintStart_toStartOf="@id/charts_content"
            app:layout_constraintTop_toBottomOf="@+id/airHumLabel"
            app:layout_constraintVertical_bias="0.0"
            app:pcv_animDuration="800"
            app:pcv_animInterpolator="anticipate_overshoot"
            app:pcv_backgroundBarColor="@color/white"
            app:pcv_gradientColors="#5AE360 , #FF6D00 , #D50000"
            app:pcv_gradientDistributions="0.4, 0.8, 0.9"
            app:pcv_gradientType="sweep"
            app:pcv_mode="ring"
            app:pcv_orientation="clockwise"
            app:pcv_progress="0"
            app:pcv_startAngle="90"
            app:pcv_textColor="@color/black"
            app:pcv_textSize="16sp"
            app:pcv_textStyle="bold" />

        <TextView
            android:id="@+id/airTempLabel"
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/air_temp_chart_label"
            app:layout_constraintBottom_toTopOf="@+id/airHumLiveView"
            app:layout_constraintEnd_toEndOf="@+id/airTempLiveView"
            app:layout_constraintStart_toStartOf="@+id/airTempLiveView"
            app:layout_constraintTop_toBottomOf="@+id/pager" />

        <com.example.gardenbotapp.ui.widgets.CustomPercentageChartView
            android:id="@+id/airTempLiveView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/soilHumLiveView"
            app:layout_constraintStart_toEndOf="@+id/airHumLiveView"
            app:layout_constraintTop_toTopOf="@+id/airHumLiveView"
            app:pcv_animDuration="800"
            app:pcv_animInterpolator="anticipate_overshoot"
            app:pcv_backgroundBarColor="@color/white"
            app:pcv_gradientColors="#5AE360 , #FF6D00, #D50000"
            app:pcv_gradientDistributions="0.4, 0.8, 0.9"
            app:pcv_gradientType="sweep"
            app:pcv_mode="ring"
            app:pcv_orientation="clockwise"
            app:pcv_progress="0"
            app:pcv_startAngle="90"
            app:pcv_textColor="@color/black"
            app:pcv_textSize="16sp"
            app:pcv_textStyle="bold" />

        <TextView
            android:id="@+id/soilHumLabel"
            style="@style/LabelText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:text="@string/soil_hum_chart_label"
            app:layout_constraintBottom_toTopOf="@+id/airHumLiveView"
            app:layout_constraintEnd_toEndOf="@+id/soilHumLiveView"
            app:layout_constraintStart_toStartOf="@+id/soilHumLiveView"
            app:layout_constraintTop_toBottomOf="@+id/pager" />

        <com.example.gardenbotapp.ui.widgets.CustomPercentageChartView
            android:id="@+id/soilHumLiveView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="@id/charts_content"
            app:layout_constraintStart_toEndOf="@+id/airTempLiveView"
            app:layout_constraintTop_toTopOf="@+id/airHumLiveView"
            app:pcv_animDuration="800"
            app:pcv_animInterpolator="anticipate_overshoot"
            app:pcv_backgroundBarColor="@color/white"
            app:pcv_gradientColors="#D50000, #FF6D00 , #5AE360"
            app:pcv_gradientDistributions="0.2, 0.5, 0.6"
            app:pcv_gradientType="sweep"
            app:pcv_mode="ring"
            app:pcv_orientation="clockwise"
            app:pcv_progress="0"
            app:pcv_startAngle="90"
            app:pcv_textColor="@color/black"
            app:pcv_textSize="16sp"
            app:pcv_textStyle="bold" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/chart_frag_title"
        style="@style/GardenLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginStart="32dp"
        android:background="@color/white"
        android:text="@string/chart_data_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:background="@color/white"
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@id/chart_frag_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@id/chart_frag_title"
        app:layout_constraintTop_toTopOf="@id/chart_frag_title" />

</androidx.constraintlayout.widget.ConstraintLayout>